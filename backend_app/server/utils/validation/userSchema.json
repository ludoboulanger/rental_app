{
  "required": ["name", "email", "password"],
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 50,
      "pattern": "[A-Za-z]+"
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "maxLength": 100
    }
  }
}
